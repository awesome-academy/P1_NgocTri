include mixin.pug
include data.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")        
        link(rel="stylesheet", href="style.css")
        link(rel="stylesheet", href="fontawsome/css/all.min.css")
        title Project 1
    body
        header.header
            .header-information
                .header-information__content
                    .header-information__content-left
                        .header-information__content-left-open-time
                            i(class="far fa-clock")   Open time: 8:00 - 18:00  Monday - Sunday
                        ul.header-information__content-left-social
                            li
                                i(class="fab fa-facebook-f")
                            li
                                i(class="fab fa-twitter")
                            li
                                i(class="fab fa-tumblr")
                            li
                                i(class="fab fa-vimeo-v")
                    .header-information__content-right
                        .header-information__content-right-user
                            i(class="fas fa-user")    Đăng nhập
                        .header-information__content-right-user
                            i(class="fas fa-user-plus")    Đăng ký
            .header-banner
                .header-banner__content
                    img.header-banner__content-logo(src="images/logo.png")
                    .header-banner__content-right
                        .header-banner__content-right-hotline
                            i(class="fas fa-phone-alt")   HỖ TRỢ: (04) 6674 2332 - (04) 3786 8904
                        .header-banner__content-right-search
                            input#inputSearch(type="text" placeholder="Tìm kiếm...")
                            label(class="fas fa-search" for="inputSearch")
                        .header-banner__content-right-cart
                            i(class="fas fa-shopping-basket") 0 Sản phẩm
            .header-navbar
                ul.header-navbar__menu
                    li.header-navbar__menu-item
                        a(class="fas fa-bars" href="#")
                    each mn,index in menu
                        if index == 2
                            li.header-navbar__menu-item
                                a(href="#")= mn
                                    i(class="fas fa-caret-down")
                        else if index == 3
                            li.header-navbar__menu-item
                                a(href="#")= mn
                                    i(class="fas fa-caret-down")
                        else
                            li.header-navbar__menu-item
                                a(href="#")= mn
